{
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    },
    "rules": {
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        no-unused-vars: [
            2,
            { "args": "all", "argsIgnorePattern": "^_" }
        ]
    },
    "env": {
        "es6": true,
        "browser": true
    },
    "extends": "eslint:recommended"
}

